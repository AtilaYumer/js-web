<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
  {{#if isOwner}}
  <a class="btn" href="/cubes/attach/accessory/{{cube.id}}">Add accessory</a>
  <a class="btn" href="/cubes/edit/{{cube.id}}">Edit</a>
  <a class="btn" href="/cubes/delete/{{cube.id}}">Delete</a>
  {{/if}}
  <a class="btn" href="/">Back</a>
</div>
<h2>Accessories</h2>
{{#if cube.accessories}}
<div class="accessories">
  {{#each cube.accessories}}
  <div class="accessory">
    <img src="{{imageUrl}}" alt="{{name}}">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
  </div>
  {{/each}}
</div>
{{else}}
<h3 class="italic">This cube has no accessories yet...</h3>
{{/if}}