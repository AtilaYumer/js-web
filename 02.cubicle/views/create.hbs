<h1>Create</h1>
<div class="form">
  <form action="#" method="post">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cube.name}}">
    <label for="name">Description</label>
    <textarea id="name" name="description">{{cube.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{cube.imageUrl}}">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficultyLevel">
      <option {{#if (isEqual cube.difficultyLevel 1) }} selected {{/if}} value="1">1 - Very Easy</option>
      <option {{#if (isEqual cube.difficultyLevel 2) }} selected {{/if}} value="2">2 - Easy</option>
      <option {{#if (isEqual cube.difficultyLevel 3) }} selected {{/if}} value="3">3 - Medium (Standard 3x3)</option>
      <option {{#if (isEqual cube.difficultyLevel 4) }} selected {{/if}} value="4">4 - Intermediate</option>
      <option {{#if (isEqual cube.difficultyLevel 5) }} selected {{/if}} value="5">5 - Expert</option>
      <option {{#if (isEqual cube.difficultyLevel 6) }} selected {{/if}} value="6">6 - Hardcore</option>
    </select>
    <input type="submit" value="Create">
  </form>
</div>